{% extends "base.twig" %}
{% block content %}
    <div class="content-inner p-4 d-flex align-items-start">
        <div class="row mb-3 p-4">
            <form method="post">
                <div class="mb-3">
                    <h3>Добавить задачу</h3>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="name@example.com" required>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Имя</label>
                    <input type="" class="form-control" id="" name="username"  placeholder="Вася" required>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Задача</label>
                    <textarea class="form-control" name="task" rows="3" required></textarea>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Новая задача</button>
                </div>
            </form>
        </div>
        <div class="row p-4">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Почта</th>
                    <th scope="col">Задача</th>
                    <th scope="col">Выполнено</th>
                </tr>
                </thead>
                <tbody>
            {% for task in tasks %}
                <tr>
                    <th scope="row">{{ task.id }}</th>
                    <td>{{ task.username }}</td>
                    <td>{{ task.email }}</td>
                    <td width="40%">{{ task.task }}</td>
                    <td align="center">{% if task.is_done %}<img src="/assets/images/check.svg">{% endif %}</td>
                </tr>
            {% endfor %}
                </tbody>
            </table>
            <div>
                <nav aria-label="...">
                    <ul class="pagination pagination-sm">
                        {% for _page in range(1,pages) %}
                            {% if _page == page %}
                                <li class="page-item active" aria-current="page">
                                    <span class="page-link">{{ _page }}</span>
                                </li>
                            {% else %}
                                <li class="page-item"><a class="page-link" href="/?page={{ _page }}">{{ _page }}</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}